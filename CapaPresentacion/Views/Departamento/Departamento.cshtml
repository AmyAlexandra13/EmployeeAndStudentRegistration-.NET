@model IEnumerable<CapaEntidad.Departamento>

@{
    ViewBag.Title = "Creando Departamentos";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h2 class="label-info text-center">Departamentos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Departamento", "Crear", "Departamento", new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            ID
           <!-- @Html.DisplayNameFor(model => model.IdDpt)-->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Siglas)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdDpt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Siglas)
        </td>
        
        <td>
           
            @Html.ActionLink("Editar", "Editar", new {  id=item.IdDpt }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdDpt }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
